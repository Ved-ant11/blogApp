<!-- views/users.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users - Blog App</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="shortcut icon" href="https://img.icons8.com/?size=100&id=UXHFRv945p6v&format=png&color=000000" type="image/x-icon">

  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10 font-sans">
      <h1 class="text-center text-3xl font-bold">Blog <span class="text-amber-200">App</span></h1>
      <h2 class="text-center text-xl m-10">Registered Users</h2>
      
      <div class="max-w-2xl mx-auto">
        <% if (users && users.length > 0) { %>
          <ul class="space-y-4">
            <% users.forEach(user => { %>
              <li class="bg-zinc-800 rounded-lg p-4 shadow-lg hover:bg-zinc-700 transition-colors duration-200">
                <div class="flex items-center justify-between">
                  <div>
                    <span class="text-lg text-blue-400 font-medium"><%= user.name %></span>
                    <span class="text-sm text-zinc-400 ml-2"><%= user.email %></span>
                  </div>
                  <div class="flex gap-3">
                    <button class="px-3 py-1 text-sm bg-blue-500 hover:bg-blue-600 rounded-md transition-colors">View</button>
                    <button class="px-3 py-1 text-sm bg-emerald-500 hover:bg-emerald-600 rounded-md transition-colors">Edit</button>
                    <button class="px-3 py-1 text-sm bg-red-500 hover:bg-red-600 rounded-md transition-colors" >Delete</button>
                  </div>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-center text-zinc-400">No users found</p>
        <% } %>
      </div>

      <div class="mt-10 flex justify-center gap-4">
        <a class="text-blue-500 hover:text-blue-400 transition-colors" href="/">Home</a>
        <a class="text-blue-500 hover:text-blue-400 transition-colors" href="/register">Register New User</a>
      </div>
    </div>
  </body>
</html>